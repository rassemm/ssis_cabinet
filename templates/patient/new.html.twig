{% extends 'Master/welcome.html.twig' %}

{% block title %}Create New Patient{% endblock %}

{% block body %}
<a href="{{ path('app_patient_index') }}" class="badge badge-sm bg-gradient-success">Back to List</a>
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Create Patient</h6>
        </div>
    </div>

    <div class="card-body px-0 pb-2">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'role': 'form'}}) }}

                <!-- Row for First Name and Last Name fields -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.firstName, 'First Name') }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.lastName, 'Last Name') }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Row for Age and Date of Birth fields -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.age, 'Age') }}
                            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.dateOfBirth, 'Date of Birth') }}
                            {{ form_widget(form.dateOfBirth, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Row for Medical History field -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.medicalHistory, 'Medical History') }}
                            {{ form_widget(form.medicalHistory, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg bg-gradient-dark w-100 mt-4">Save Patient</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
