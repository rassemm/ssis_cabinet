<div class="container mt-4">
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary mb-3">Back to list</a>
    <div class="card">
        <div class="card-body">
            <h4 class="font-weight-bolder text-center">Delete User</h4>
            
            <p class="text-center text-muted">
                Are you sure you want to delete this user? This action cannot be undone.
            </p>
            
            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
