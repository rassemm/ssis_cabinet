{% extends 'Master/welcome.html.twig' %}

{% block title %}Edit Consultation{% endblock %}

{% block body %}
<a href="{{ path('app_consultation_index') }}" class="badge badge-sm bg-gradient-success">Back to List</a>
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Edit Consultation</h6>
        </div>
    </div>

    <div class="card-body px-0 pb-2">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'role': 'form'}}) }}
                
                <div class="mb-3">
                    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.patient, 'Patient', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.patient) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.doctor, 'Doctor', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.doctor, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.doctor) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg bg-gradient-dark w-100 mt-4">Save Changes</button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
