{% extends 'Master/welcome.html.twig' %}

{% block title %}Create New Consultation{% endblock %}

{% block body %}
<a href="{{ path('app_consultation_index') }}" class="badge badge-sm bg-gradient-success">Back to List</a>
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Create Consultation</h6>
        </div>
    </div>

    <div class="card-body px-0 pb-2">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'role': 'form'}}) }}

                <!-- Row for Date and Description fields -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.date, 'Date') }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Row for Patient and Doctor fields -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.patient, 'Patient') }}
                            {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group input-group-outline">
                            {{ form_label(form.doctor, 'Doctor') }}
                            {{ form_widget(form.doctor, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg bg-gradient-dark w-100 mt-4">Save Consultation</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
